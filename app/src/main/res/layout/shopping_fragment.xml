<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.shopping.ShoppingFragment" android:background="@color/lineItem">
    <include android:layout_width="match_parent" layout="@layout/app_action_bar" android:id="@+id/appActionBar"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floatingActionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:clickable="true"
        android:focusable="auto"
        android:src="@drawable/ic_playlist_add_black_24dp"
        android:theme="@style/AppTheme"
        app:backgroundTint="@color/colorAccent"
        app:elevation="5dp"
        app:fabSize="auto" />
    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:id="@+id/RecyclerViewShopping"
            tools:listitem="@layout/shopping_row" android:layout_marginTop="@dimen/height_appActionBar">
    </androidx.recyclerview.widget.RecyclerView>
</FrameLayout>
<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.shoppingcart.ShoppingCartFragment" android:background="@color/lineItem">
    <include android:layout_width="wrap_content" layout="@layout/app_action_bar"/>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:layout_marginTop="@dimen/height_appActionBar">

        <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/loader" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                android:layout_marginTop="8dp" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toTopOf="@+id/constraintLayout"
                android:progressTint="@color/colorPrimaryDark"/>
        <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="0dp" tools:listitem="@layout/shopping_cart_row"
                android:id="@+id/RecyclerViewShoppingCart" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/constraintLayout">
        </androidx.recyclerview.widget.RecyclerView>
        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="53dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
                android:id="@+id/constraintLayout" android:background="@color/color_333333">

            <TextView
                    android:text="Total:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView2"
                    android:textStyle="bold"
                    android:textSize="24sp" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp" android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toBottomOf="parent" android:textColor="@color/color_f7f7f7"/>
            <TextView
                    android:text="@string/shopping_cart_row_replace"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/txtTotal"
                    app:layout_constraintStart_toEndOf="@+id/textView2" android:layout_marginStart="8dp"
                    app:layout_constraintTop_toTopOf="@+id/textView2"
                    app:layout_constraintBottom_toBottomOf="@+id/textView2"
                    android:textSize="24sp" android:textColor="@color/color_f7f7f7"/>
            <View
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:id="@+id/view" android:background="@color/lineItem"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

            <Button
                android:id="@+id/btnAddItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:background="@android:color/transparent"
                android:drawableStart="@drawable/ic_add_shopping_cart_black_24dp"
                android:text="Novo"
                android:textColor="@color/colorAccent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/view" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>